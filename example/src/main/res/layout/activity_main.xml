<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.victor.customtogglebutton.MainActivity">

    <com.victor.togglebuttonlib.CustomToggleButton
        android:id="@+id/ctb_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:switch_background="@mipmap/switch_background"
        app:slide_button="@mipmap/slide_button"
        app:switch_state="false"/>

</RelativeLayout>
